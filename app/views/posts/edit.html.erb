<div class="container">
	<div class="edit-body">
		<h1>編集画面</h1>

			<%= form_for(@post) do |f| %>

				<h4 class="form-heading">title</h4>
				<%= f.text_field :title, :size=>"30" %>

				<h4 class="form-heading">review</h4>
				<%= f.text_area :body, :size=>"50x7" %>

				<div><%= f.submit '保存' %></div>
			<% end %>
			<p class="index-link">	<%= link_to "投稿一覧に戻る", posts_path %></p>
	</div>
</div>