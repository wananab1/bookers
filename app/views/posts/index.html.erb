<!-- 投稿一覧 -->
<h1>投稿一覧</h1>
<% @posts.each do |post| %>
	<h4>title</h4>
	<span><%= post.title %></span>
	<h4>review</h4>
	<span><%= post.body %></span>
	<%= link_to "詳細", post_path(post) %>
	<p>__________________</p>
<% end %>



<!-- 新規投稿機能 -->
<h2>新規投稿</h2>

<%= form_for(@post) do |f| %>

	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>review</h4>
	<%= f.text_area :body %>

	<%= f.submit '投稿' %>

<% end %>